<%= simple_form_for(@clubhouse) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
    <%= f.input :post, label: "Tell the world...", input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label"}, placeholder: "Spill the tea..." %>
    </div>
  </div>
  <%= f.submit "Post about it" %>
<% end %>